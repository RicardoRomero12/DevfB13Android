<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/numeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="55dp"
            android:gravity="right"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/resultados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:background="#000"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/siete"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/ocho"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/nueve"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="50dp"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:id="@+id/cuatro"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/cinco"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/seis"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="50dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:id="@+id/uno"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/dos"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tres"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/punto"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/cero"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/igual"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="50dp"
                    android:gravity="center"/>
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="#909090"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/borrar"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CE"
                android:textSize="30dp"
                android:gravity="center"
                android:onClick="onClick" />


            <TextView
                android:id="@+id/division"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="/"
                android:textSize="30dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/multiplicacion"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="*"
                android:textSize="30dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/resta"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="-"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/suma"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="+"
                android:textSize="30dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>